<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <!--   <TextView
        android:id="@+id/dashCardCatgeorySD"
        style="@style/dashTxtVCat"
        android:text="@string/category2" /> -->

    <ScrollView
        android:id="@+id/horizScrolSD"
        style="@style/dashHorizSlider" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relholderSD1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dashCardTaskHolderSD1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/SDSTask1" />

                <TextView
                    android:id="@+id/dashCardSDTaskNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dashCardTaskHolderSD1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dashCardTaskHolderSD1"
                    android:text="@string/TaskNum1" />

                <TextView
                    android:id="@+id/dashCardPointsSD1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/dashCardSDTaskNum1"
                    android:layout_below="@id/dashCardSDTaskNum1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Points5" />
                
                <ImageView
                    android:id="@+id/ImgVdashCardCompletedTickSD1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/dashCardPointsSD1"
                    android:layout_alignLeft="@id/dashCardPointsSD1"
                    android:layout_marginTop="5dp"
                    android:contentDescription="star"
                    android:visibility="invisible"
                    android:src="@android:drawable/btn_star_big_on" />
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relholderSD2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dashCardTaskHolderSD2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/GR8Task1" />

                <TextView
                    android:id="@+id/dashCardSDTaskNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dashCardTaskHolderSD2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dashCardTaskHolderSD2"
                    android:text="@string/TaskNum2" />

                <TextView
                    android:id="@+id/dashCardPointsSD2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/dashCardSDTaskNum2"
                    android:layout_below="@id/dashCardSDTaskNum2"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Points5" />
                 
                <ImageView
                    android:id="@+id/ImgVdashCardCompletedTickSD2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/dashCardPointsSD2"
                    android:layout_alignLeft="@id/dashCardPointsSD2"
                    android:layout_marginTop="5dp"
                    android:contentDescription="star"
                    android:visibility="invisible"
                    android:src="@android:drawable/btn_star_big_on" />
                
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>