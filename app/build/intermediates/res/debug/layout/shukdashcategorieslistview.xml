<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="8dp"
        android:text="Task Category Name"
        android:id="@+id/txtVShukDashCatListCatName" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Number of Tasks"
        android:layout_toRightOf="@+id/txtVShukDashCatListCatName"
        android:layout_alignTop="@+id/txtVShukDashCatListCatName"
    android:id="@+id/txtVShukDashCatListNumOfTasks"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tasks Completed"
        android:layout_below="@+id/txtVShukDashCatListCatName"
        android:layout_alignLeft="@+id/txtVShukDashCatListCatName"
        android:id="@+id/txtVShukDashCatListTasksCompleted"
        android:layout_marginTop="8dp"
        />

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task 1"
        android:id="@+id/checkedTextView"
        android:checked="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/txtVShukDashCatListTasksCompleted"
        android:layout_alignLeft="@+id/txtVShukDashCatListTasksCompleted"
        android:layout_alignStart="@+id/txtVShukDashCatListTasksCompleted" />

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:text="task 2"
        android:id="@+id/checkedTextView2"
        android:checked="true"
       android:layout_alignTop="@+id/checkedTextView"
        android:layout_toRightOf="@+id/checkedTextView"
         />
</RelativeLayout><!-- From: file:/C:/java/AndroidStudio/ShukDash/app/src/main/res/layout/shukdashcategorieslistview.xml -->