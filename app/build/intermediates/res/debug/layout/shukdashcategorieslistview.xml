<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relLayCatListView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/switch_thumb_normal_material_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="8dp"
        android:text="Task Category Name"
        android:id="@+id/txtVShukDashCatListCatName" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Number of Tasks"
        android:gravity="end"
        android:layout_toRightOf="@+id/txtVShukDashCatListCatName"
        android:layout_alignTop="@+id/txtVShukDashCatListCatName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
    android:id="@+id/txtVShukDashCatListNumOfTasks"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tasks Completed"
        android:layout_below="@+id/txtVShukDashCatListCatName"
        android:layout_alignLeft="@+id/txtVShukDashCatListCatName"
        android:id="@+id/txtVShukDashCatListTasksCompleted"
        android:layout_marginTop="8dp"
        />

    <LinearLayout
        android:id="@+id/linLayCheckedTextViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/txtVShukDashCatListTasksCompleted"
        android:layout_alignLeft="@+id/txtVShukDashCatListTasksCompleted"
        android:layout_alignStart="@+id/txtVShukDashCatListTasksCompleted"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tasks to do:"

            android:id="@+id/txtVShukDashCatListTasksToDoTitle"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".."
            android:layout_marginLeft="8dp"
            android:id="@+id/txtVShukDashCatListTasksToDoNum"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tasks Done:"
            android:layout_marginLeft="8dp"
            android:id="@+id/txtVShukDashCatListTasksCompletedTitle"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".."
            android:layout_marginLeft="8dp"
            android:id="@+id/txtVShukDashCatListTasksCompletedNum"

            />

</LinearLayout>

</RelativeLayout>

