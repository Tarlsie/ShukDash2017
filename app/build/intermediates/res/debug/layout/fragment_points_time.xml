<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="8dp"
    tools:context="com.app.shukdash.Views.fragments.PointsTimeFragment">

    <TextView
        android:id="@+id/txtVFragmentClock"
        android:text="Fragment points Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

           <TextView
            android:id="@+id/TxtVDashTasksCompleted"
            style="@style/DashGridLayChildren"
            android:text="@string/tasks_completed_"
            android:layout_below="@id/txtVFragmentClock"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/TxtVDashTasksCompletedDisplay"
            style="@style/DashGridLayChildren"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/TxtVDashTasksCompleted"
            android:layout_alignTop="@+id/TxtVDashTasksCompleted"/>

        <TextView
            android:id="@+id/TxtVDashTasksRemaining"
            style="@style/DashGridLayChildren"
            android:text="@string/tasks_remaining_"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/TxtVDashTasksCompletedDisplay"
            android:layout_alignTop="@+id/TxtVDashTasksCompleted"
            />

        <TextView
            android:id="@+id/TxtVDashTasksRemainingDisplay"
            style="@style/DashGridLayChildren"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/TxtVDashTasksRemaining"
            android:layout_alignTop="@+id/TxtVDashTasksRemaining"/>

        <TextView
            android:id="@+id/TxtVDashTotalPotentialPoints"
            style="@style/DashGridLayChildren"
            android:text="@string/total_points_so_far"
            android:layout_toRightOf="@+id/TxtVDashTasksRemainingDisplay"
            android:layout_alignTop="@+id/TxtVDashTasksRemainingDisplay"
            android:layout_marginLeft="24dp"
            />

        <TextView
            android:id="@+id/TxtVDashTotalPotentialPointsDisplay"
            style="@style/DashGridLayChildren"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/TxtVDashTotalPotentialPoints"
            android:layout_alignTop="@+id/TxtVDashTotalPotentialPoints"/>

        <TextView
            android:id="@+id/TxtVDashTimeRemaining"
            style="@style/DashGridLayChildren"
            android:text="@string/time_remaining_"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/TxtVDashTasksRemaining"
           android:layout_alignLeft="@+id/TxtVDashTasksRemaining"/>

        <TextView
            android:id="@+id/TxtVDashTimeRemainingDisplay"
            style="@style/DashGridLayChildren"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/TxtVDashTimeRemaining"
            android:layout_alignTop="@+id/TxtVDashTimeRemaining"/>

</RelativeLayout>
