<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_dash_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shukdash.Unused.Dash_fragmentCatPoints" >

   <!--  <TextView
        android:id="@+id/dashCardCatgeory"
        style="@style/dashTxtVCat"
        android:text="@string/category1" /> -->

    <ScrollView
        android:id="@+id/horizScrol2"
        style="@style/dashHorizSlider"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relholderPA1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/dashCardTaskHolder"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/PATask1" />

                <TextView
                    android:id="@+id/dashCardTaskNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dashCardTaskHolder"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dashCardTaskHolder"
                    android:text="@string/TaskNum1" />

                <TextView
                    android:id="@+id/dashCardPoints1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/dashCardTaskNum1"
                    android:layout_below="@id/dashCardTaskNum1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Points4" />

                <ImageView
                    android:id="@+id/ImgVdashCardCompletedTickPA1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/dashCardPoints1"
                    android:layout_alignLeft="@id/dashCardPoints1"
                    android:layout_marginTop="5dp"
                    android:contentDescription="star"
                    android:visibility="invisible"
                    android:src="@android:drawable/btn_star_big_on" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relholderPA2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" 
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/dashCardTaskHolder2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/PATask2" />

                <TextView
                    android:id="@+id/dashCardTaskNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dashCardTaskHolder2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dashCardTaskHolder2"
                    android:text="@string/TaskNum2" />

                <TextView
                    android:id="@+id/dashCardPoints2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/dashCardTaskNum2"
                    android:layout_below="@id/dashCardTaskNum2"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Points4" />
                
                <ImageView
                    android:id="@+id/ImgVdashCardCompletedTickPA2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/dashCardPoints2"
                    android:layout_alignLeft="@id/dashCardPoints2"
                    android:layout_marginTop="5dp"
                    android:contentDescription="star"
                    android:visibility="invisible"
                    android:src="@android:drawable/btn_star_big_on" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relholderPA3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" 
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/dashCardTaskHolder3"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/PATask3" />

                <TextView
                    android:id="@+id/dashCardTaskNum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dashCardTaskHolder3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/dashCardTaskHolder3"
                    android:text="@string/TaskNum3" />

                <TextView
                    android:id="@+id/dashCardPoints3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_alignLeft="@id/dashCardTaskNum3"
                    android:layout_below="@id/dashCardTaskNum3"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Points4" />
                
                <ImageView
                    android:id="@+id/ImgVdashCardCompletedTickPA3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/dashCardPoints3"
                    android:layout_alignLeft="@id/dashCardPoints3"
                    android:layout_marginTop="5dp"
                    android:contentDescription="star"
                    android:visibility="invisible"
                    android:src="@android:drawable/btn_star_big_on" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

   

</LinearLayout>